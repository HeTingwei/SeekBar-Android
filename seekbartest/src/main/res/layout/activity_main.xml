<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xingyi.seekbartest.MainActivity">

    <SeekBar
        android:id="@+id/seekBar1"
        android:progressDrawable="@drawable/seek_bar_progress1"
        android:thumb="@drawable/seek_bar_thumb"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.294"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/textView"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="进度：0"
        android:layout_marginLeft="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginStart="35dp"/>

    <TextView
        android:id="@+id/textView2"
        android:textSize="25sp"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="27dp"
        android:text="自定义颜色大小形状的拖动条"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="35dp"/>

    <SeekBar
        android:id="@+id/seekBar2"
        android:progressDrawable="@drawable/seek_bar_progress2"
        android:thumb="@drawable/seek_bar_thumb2"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="33dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"/>

    <TextView
        android:id="@+id/textView3"
        android:gravity="center"
        android:layout_width="368dp"
        android:layout_height="0dp"
        android:layout_marginLeft="142dp"
        android:layout_marginTop="56dp"
        android:text="使用图片的拖动条"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar1"
        android:layout_marginStart="142dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:text="进度：0"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_marginLeft="62dp"
        app:layout_constraintLeft_toLeftOf="parent"/>


</android.support.constraint.ConstraintLayout>
